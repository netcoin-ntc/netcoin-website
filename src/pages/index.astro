<style>
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap');

:root {
  --primary: #3b82f6;    /* Modern blue */
  --primary-light: #60a5fa;
  --primary-dark: #2563eb;
  --secondary: #6366f1;  /* Modern indigo */
  --secondary-light: #818cf8;
  --accent: #10b981;     /* Modern emerald */
  --accent-light: #34d399;
  --success: #10b981;
  --warning: #f59e0b;
  --danger: #ef4444;
  --dark: #0f172a;
  --light: #ffffff;
  --gray-50: #f8fafc;
  --gray-100: #f1f5f9;
  --gray-200: #e2e8f0;
  --gray-300: #cbd5e1;
  --gray-400: #94a3b8;
  --gray-500: #64748b;
  --gray-600: #475569;
  --gray-700: #334155;
  --gray-800: #1e293b;
  --gray-900: #0f172a;
  --glass: rgba(255, 255, 255, 0.05);
  --glass-border: rgba(255, 255, 255, 0.1);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  line-height: 1.6;
  color: var(--gray-100);
  background: var(--gray-900);
  min-height: 100vh;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 600;
  line-height: 1.2;
  color: var(--light);
}



.section {
  padding: 120px 20px;
  max-width: 1200px;
  margin: 0 auto;
  color: var(--gray-300);
}

.section h1,
.section h2,
.section h3,
.section h4,
.section h5,
.section h6 {
  color: var(--light);
}

.section p,
.section li,
.section blockquote {
  color: var(--gray-400);
}

.section blockquote {
  color: var(--gray-500);
}

.features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2.5rem;
  margin-bottom: 5rem;
}

.feature-card {
  background: var(--gray-800);
  padding: 2rem;
  border-radius: 16px;
  border: 1px solid var(--gray-700);
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
}

.feature-card:hover {
  transform: translateY(-4px);
  border-color: var(--primary);
}

.feature-icon {
  width: 64px;
  height: 64px;
  margin: 0 auto 1rem;
  background: var(--primary);
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 2rem;
}

.feature-card h3 {
  font-size: 1.25rem;
  margin-bottom: 0.75rem;
  color: var(--light);
  font-weight: 600;
}

.feature-card p {
  color: var(--gray-400);
  line-height: 1.6;
  font-size: 0.95rem;
}

.stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 2.5rem;
  text-align: center;
}

.stat-card {
  background: white;
  padding: 2rem;
  border-radius: 16px;
  box-shadow: 0 8px 25px rgba(0,0,0,0.1);
  border: 1px solid var(--gray-200);
}

.stat-number {
  font-size: 3rem;
  font-weight: 700;
  background: linear-gradient(135deg, var(--primary), var(--secondary));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 0.5rem;
  font-family: 'JetBrains Mono', monospace;
}

.stat-card h4 {
  color: var(--gray-700);
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.stat-card small {
  color: var(--gray-500);
  font-size: 0.9rem;
}

.footer {
  background: var(--gray-800);
  color: var(--gray-300);
  padding: 60px 20px;
  text-align: center;
  position: relative;
  border-top: 1px solid var(--gray-700);
}

.footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary), var(--secondary), var(--accent));
}

.footer a {
  color: var(--gray-300);
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer a:hover {
  color: var(--light);
}

.footer h4 {
  color: var(--light);
  margin-bottom: 1rem;
}

.footer p {
  color: var(--gray-400);
}

/* Footer buttons with dark theme */
.footer .btn-secondary {
  background: var(--gray-700) !important;
  color: var(--gray-300) !important;
  border: 2px solid var(--gray-600) !important;
}

.footer .btn-secondary:hover {
  background: var(--gray-600) !important;
  border-color: var(--primary) !important;
  color: var(--light) !important;
}

.footer .btn-primary {
  background: var(--primary) !important;
  color: white !important;
}

.footer .btn-primary:hover {
  background: var(--primary-dark) !important;
  color: white !important;
}

/* Enhanced typography */
blockquote {
  font-style: italic;
  border-left: 4px solid var(--primary);
  padding-left: 1.5rem;
  margin: 2rem 0;
  color: var(--gray-700);
  position: relative;
}

blockquote::before {
  content: '"';
  font-size: 4rem;
  color: var(--primary);
  position: absolute;
  left: -10px;
  top: -20px;
  font-family: Georgia, serif;
}



/* Better spacing and rhythm */
.section > * + * {
  margin-top: 2rem;
}

/* Modern card improvements */
.feature-card {
  position: relative;
}

.feature-card::after {
  content: '';
  position: absolute;
  top: -2px;
  left: -2px;
  right: -2px;
  bottom: -2px;
  background: linear-gradient(135deg, var(--primary), var(--secondary), var(--accent));
  border-radius: 22px;
  z-index: -1;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.feature-card:hover::after {
  opacity: 0.1;
}

/* Advanced button effects */
.btn {
  position: relative;
}

.btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 70%);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.btn:active::after {
  width: 300px;
  height: 300px;
}

/* Modern text effects - disabled for readability */
